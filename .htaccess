# Assistente Farmacia Panel - .htaccess Semplificato

# Abilita rewrite engine
RewriteEngine On

# Blocca accesso a file sensibili
<FilesMatch "^(config|logs)/.*$">
    Require all denied
</FilesMatch>

<FilesMatch "\.(log|bak|backup|tmp)$">
    Require all denied
</FilesMatch>

# Permetti solo immagini in uploads
<FilesMatch "^uploads/.*\.(jpg|jpeg|png|gif|pdf)$">
    Require all granted
</FilesMatch>

<FilesMatch "^uploads/.*$">
    Require all denied
</FilesMatch>

# Reindirizzamenti semplici
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [L,QSA]

# Directory di default
DirectoryIndex index.php

# Configurazione PHP base
<IfModule mod_php.c>
    php_flag display_errors off
    php_flag log_errors on
    php_flag session.cookie_httponly on
    php_flag session.cookie_secure on
</IfModule> 