# Protezione cartella uploads
# Permette solo l'accesso alle immagini

# Blocca l'esecuzione di script PHP
<Files "*.php">
    Order Allow,Deny
    Deny from all
</Files>

# Blocca l'esecuzione di script
<FilesMatch "\.(php|php3|php4|php5|phtml|pl|py|jsp|asp|sh|cgi)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Permette solo immagini
<FilesMatch "\.(jpg|jpeg|png|gif|webp|svg)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Blocca tutti gli altri file
<FilesMatch ".*">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Imposta header di sicurezza
<IfModule mod_headers.c>
    Header set X-Content-Type-Options nosniff
    Header set X-Frame-Options DENY
    Header set X-XSS-Protection "1; mode=block"
</IfModule> 